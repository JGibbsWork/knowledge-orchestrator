# Basic service configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Memory service configuration (required)
MEMORY_BASE_URL=https://memory-service.example.com
MEMORY_TOKEN=your_memory_service_token_here

# Notion integration (required)
NOTION_BASE_URL=https://api.notion.com/v1
NOTION_TOKEN=secret_your_notion_integration_token

# Brave search API (required)
BRAVE_API_KEY=your_brave_search_api_key_here

# Database configuration (required)
MONGO_URL=mongodb://localhost:27017/knowledge-orchestrator

# AI/ML configuration (required)
EMBEDDINGS_PROVIDER=openai

# Security settings
ALLOW_PRIVATE_DEFAULT=false